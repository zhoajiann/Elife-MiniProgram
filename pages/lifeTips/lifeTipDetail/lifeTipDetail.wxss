/* pages/lifeTips/lifeTipDetail/lifeTipDetail.wxss */
page {
  background-color: white;
  /* height:100%; */
  width: 100%;
}

.views {
  height: auto;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top:10rpx;
}

.title {
  font-size: 38rpx;
  font-weight: 520;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  height: 90rpx;
}

.line {
  margin: 0 auto;
  margin-top: 10rpx;
  height: 0.3rpx;
  background-color: rgb(177, 170, 170);
}

.audio {
  display: flex;
  flex-direction: column;
  height: auto;
  margin-top: 40rpx;
  text-align: center;
}

.content {
  display: inline-block;
  font-size: 28rpx;
  line-height: 45rpx;
  color:rgb(49, 66, 66);
  padding-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  letter-spacing:4rpx;
}

.end {
  display: block;
  height: 50rpx;
  color: darkgrey; 
  font-size: 32rpx;
  text-align: center;
  position: relative; 
  top: 25rpx;
}

.fun{
  display: block;
  height: 50rpx;
  position: relative;
  margin-top: 50rpx;
}

/* 点赞 */
.zan {
  width: 170rpx;
  position: absolute;
  top: 0;
  left: 15rpx;
}

.zan .alzan {
  position: absolute;
  left: 65rpx;
  height:25rpx;
  line-height: 25rpx;
  color: rgb(74, 125, 182);
  font-size: 28rpx;
  font-weight: bold;
}

.img {
  position: absolute;
  left: 30rpx;
  height:25rpx;
  line-height: 25rpx;
  color: rgb(74, 125, 182);
}

/* 收藏 */
.shoucang {
  width: 170rpx;
  position: absolute;
  top: 0;
  left: 150rpx;
}

.shoucang .collect {
  position: absolute;
  left: 65rpx;
  height: 25rpx;
  line-height: 25rpx;
  color: rgb(74, 125, 182);
  font-size: 28rpx;
  font-weight: bold;
}

.img2 {
  position: absolute;
  left: 30rpx;
  height: 25rpx;
  line-height: 25rpx;
  color: rgb(74, 125, 182);
}

/* 分享 */
#btn {
  border: none;
  position: absolute;
  right:15rpx;
  top: -10rpx;
  font-size: 28rpx;
  color:rgb(74, 125, 182);
  width:130rpx;
}
.share{
  color:rgb(74, 125, 182);
  position: absolute;
  left:0rpx;
}

.sum{
  position: absolute;
  top: 75rpx;
  width:100%;
  font-size: 16rpx;
  text-align: center;
}
.line2 {
  margin: 0 auto;
  /* width:100%; */
  margin-bottom: 24rpx;
  height: 0.3rpx;
  background-color: rgb(221, 217, 217);
}
.sum text{
  height: 27rpx;
  line-height: 27rpx;
  display: block;
  text-align: center;
  font-size: 26rpx;
}

.pic{
  width: 70%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin: 0 auto;
  margin-top: 16rpx;
}
.flex-wrp{
  width:10%;
  border-radius: 50%; 
  display: flex;
  margin: 5rpx;
}
.flex-wrp image{
  height: auto;
  border-radius: 50%;
}